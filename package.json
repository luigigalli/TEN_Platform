{
  "name": "rest-express",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsx watch server/index.ts\" \"cd client && npx vite\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "cd client && npx vite",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "verify-env": "tsx scripts/verify-env",
    "db:pull": "tsx scripts/db-sync.ts pull",
    "db:push-replit": "tsx scripts/db-sync.ts push",
    "sync:windsurf": "bash scripts/sync-windsurf.sh",
    "sync:replit": "bash scripts/sync-replit.sh",
    "check-users": "tsx scripts/check-users.ts",
    "test": "NODE_ENV=test mocha --require tsx 'tests/**/*.test.ts'",
    "test:watch": "NODE_ENV=test mocha --require tsx --watch 'tests/**/*.test.ts'",
    "test:coverage": "NODE_ENV=test c8 mocha --require tsx 'tests/**/*.test.ts'",
    "openapi": "openapi-generator-cli generate -i server/openapi/spec.yaml -g typescript-node -o generated/api"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.6",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.10",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.30.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.1.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "memorystore": "^1.6.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "rimraf": "^5.0.5",
    "stripe": "^14.14.0",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^6.0.2",
    "c8": "^9.1.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "esbuild": "^0.20.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "msw": {
    "workerDirectory": "public"
  }
}